<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <br>
        <%= @user.email %>
        <br>
      </h1>
    </section>
  </aside>

  <h2><%= link_to "Start a New Project!", new_project_path %></h2>

  <table>
    <tbody>
      <% if @user.projects.count > 0 %>
      <% select_user_proj.each do |proj| %>
      <tr>
        <td><%= link_to "#{proj.project.project_type}", proj.project %></td>
        <td><%= link_to "Intersection of #{proj.project.street1} and #{proj.project.street2}", proj.project %></td>
        <td><%= proj.project.project_action_date %></td>
        <td><%= proj.project.project_complete %></td>
        <td><%= link_to "Delete",project_path(proj.project), method: :delete %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

</div>

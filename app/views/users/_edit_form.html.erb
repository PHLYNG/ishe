<%= form_for(@user, url: user_path) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name, class: 'new-streets new-streets-label'  %>
  <%= f.text_field :name, class: 'form-control new-streets new-streets-field' %>

  <%= f.label :email, class: 'new-streets new-streets-label'  %>
  <%= f.email_field :email, class: 'form-control new-streets new-streets-field'  %>

  <%= f.label :password, class: 'new-streets new-streets-label'  %>
  <%= f.password_field :password, class: 'form-control new-streets new-streets-field'  %>

  <%= f.label :password_confirmation, "Confirmation", class: 'new-streets new-streets-label'  %>
  <%= f.password_field :password_confirmation, class: 'form-control new-streets new-streets-field'  %>

  <%= f.file_field :photo, id: 'paperclip-btn' %>

  <%= f.label :motto, "What Words do You Live By?", class: 'new-streets new-streets-label'  %>
  <%= f.text_field :motto, class: 'form-control new-streets new-streets-field'  %>

  <%= f.submit "Update my account", class: "btn btn-primary" %>
<% end %>

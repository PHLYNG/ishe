<p id="notice"><%= notice %></p>

<h1>Project Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_comments.each do |project_comment| %>
      <tr>
        <td><%= project_comment.body %></td>
        <td><%= project_comment.author %></td>
        <td><%= link_to 'Show', project_comment %></td>
        <td><%= link_to 'Edit', edit_project_comment_path(project_comment) %></td>
        <td><%= link_to 'Destroy', project_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project Comment', new_project_comment_path %>
